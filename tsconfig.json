{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "allowJs": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist", "webpack.**.*", "server.js"]
}
